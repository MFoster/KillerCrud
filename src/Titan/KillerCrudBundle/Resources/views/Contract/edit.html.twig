{% extends 'TitanKillerCrudBundle:Contract:base.html.twig' %}
{% form_theme form with ['TitanKillerCrudBundle:Form:bootstrap-override.html.twig'] %}
{% block content -%}
<div class="span4">
    <div class="well">
        <h1>Contract edit</h1>
        <a href="{{ path('contract') }}">
            Back to the list
        </a>
        <form action="{{ path('contract_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            <input type="hidden" name="_method" value="PUT" />
            {{ form_widget(edit_form) }}
        </form>
    </div>
</div>
<div class="span4">
    <div class="well">
        <form action="{{ path('contract_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-large btn-danger">Delete</button>
        </form>
    </div>
</div>
{% endblock %}
