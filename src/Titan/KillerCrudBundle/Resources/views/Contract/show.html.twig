{% extends 'TitanKillerCrudBundle:Contract:base.html.twig' %}

{% block content -%}

    <h1 class="span12">Contract</h1>
    <div class="span8">
        <a href="{{ path('contract') }}">
                Back to the list
        </a>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Target</th>
                    <td>{{ entity.target }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ entity.address }}</td>
                </tr>
                <tr>
                    <th>Reward</th>
                    <td>{{ entity.reward }}</td>
                </tr>
            </tbody>
        </table>
        <div class="well ">
            <form action="{{ path('contract_delete', { 'id': entity.id }) }}" method="post">
                <div style="text-align:center;">
                    <a href="{{ path('contract_edit', { 'id': entity.id }) }}" class="btn btn-info btn-large">
                        Edit
                    </a>
                    <input type="submit" class="btn btn-danger btn-large" value="Delete" >                    
                </div>
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
      
            </form>
       </div>
    </div>


{% endblock %}
